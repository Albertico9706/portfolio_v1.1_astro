<style>
    .contact-form {
    background-color: var(--light-bg-color);
    padding: 20px;
    border-radius: 10px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    border: 1px solid ;
    width: 400px;
    max-width: 100% var(--light-text-color);
    margin:auto
}

.contact-form h2 {
    text-align: center;
    margin-bottom: 20px;
}

.contact-form input, .contact-form textarea {
    width: 100%;
    padding: 10px;
    margin-bottom: 10px;
    border: 1px solid #ddd;
    border-radius: 5px;
}

.contact-form button {
    width: 100%;
    padding: 10px;
    background-color: #007bff;
